#########
# HEADERS

# -- CORE

# NUMERIC
INTEGER_HPP			= $(NUM_DIR)/integer.hpp
RATIONAL_HPP		= $(NUM_DIR)/rational.hpp
GMP_UTILS_HPP		= $(NUM_DIR)/gmp_utils.hpp

# DATA STRUCTURES
DENSE_PAS_TRI_HPP	= $(COR_DIR)/dense_pascal_triangle.hpp
SPARSE_PAS_TRI_HPP	= $(COR_DIR)/sparse_pascal_triangle.hpp

# MISC
INOUT_HPP			= $(MSC_DIR)/inout.hpp
TIMING_HPP			= $(MSC_DIR)/timing.hpp

# SYMBOLIC
MONOMIAL_HPP		= $(COR_DIR)/monomial.hpp
POLYNOMIAL_HPP		= $(COR_DIR)/polynomial.hpp

# -- ALGORITHMS

# ALGORITHMS
ALGORITHMS_HPP		= $(ALG_DIR)/algorithms.hpp

# -- TESTS

TESTS_HPP			= $(TST_DIR)/tests.hpp

##############
# DEPENDENCIES

# -- CORE

# NUMERIC
INTEGER_DPS			= $(INTEGER_HPP)
RATIONAL_DPS		= $(RATIONAL_HPP) $(INTEGER_DPS)
GMP_UTILS_DPS		= $(GMP_UTILS_HPP)

# DATA STRUCTURES
DENSE_PAS_TRI_DPS	= $(DENSE_PAS_TRI_HPP) $(INTEGER_DPS)
SPARSE_PAS_TRI_DPS	= $(SPARSE_PAS_TRI_HPP) $(INTEGER_DPS)

# MISC
INOUT_DPS			= $(INOUT_HPP)
TIMING_DPS			= $(TIMING_HPP)

# SYMBOLIC
MONOMIAL_DPS		= $(MONOMIAL_HPP) $(INTEGER_DPS) $(RATIONAL_DPS) \
					  $(INOUT_DPS)
POLYNOMIAL_DPS		= $(POLYNOMIAL_HPP) $(MONOMIAL_DPS) $(RATIONAL_DPS) \
					  $(INTEGER_DPS) $(INOUT_DPS)

# -- ALGORITHMS

# ALGORITHMS
ALGORITHMS_DPS		= $(ALGORITHMS_HPP) $(SPARSE_PAS_TRI_DPS) $(POLYNOMIAL_DPS)

# -- TESTS

TESTS_DPS			= $(TESTS_HPP) \
					  $(INTEGER_DPS) $(RATIONAL_DPS) \
					  $(SPARSE_PAS_TRI_DPS) $(DENSE_PAS_TRI_DPS) \
					  $(MONOMIAL_DPS) $(POLYNOMIAL_DPS) \
					  $(ALGORITHMS_DPS) \
					  $(TIMING_DPS)

# MAIN
MAIN_DPS			= $(TESTS_DPS)
